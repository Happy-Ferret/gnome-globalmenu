<?xml version="1.0"?>
<gconfschemafile>
<schemalist>
	<schema>
	  <key>/schemas/apps/gnome_settings_daemon/gtk-modules/globalmenu-gnome</key>
	  <applyto>/apps/gnome_settings_daemon/gtk-modules/globalmenu-gnome</applyto>
	  <owner>libglobalmenu-gnome</owner>
	  <type>bool</type>
	  <default>true</default>
	  <locale name="C">
		<short>Enable Global Menu For GTK applications</short>
		<long>If this key is true, libglobalmenu-gnome, the GTK plugin for Global Menu is loaded.</long>
	  </locale>
	</schema>
	<schema>
	  <key>/schemas/apps/gnome_settings_daemon/gtk-modules/gnomenu-panel</key>
	  <applyto>/apps/gnome_settings_daemon/gtk-modules/gnomenu-panel</applyto>
	  <owner>libgnomenu</owner>
	  <type>bool</type>
	  <default>false</default>
	  <locale name="C">
		<short>Integrate Global Menu with gnome-panel</short>
		<long>If this key is enabled, Global Menu will be directly integrated into the Main Menu applet.</long>
	  </locale>
	</schema>
	<schema>
		<key>/schemas/apps/gnome-applet-globalmenu/prefs/disable_module_check</key>
		<owner>gnome-applet-globalmenu</owner>
		<type>bool</type>
		<default>FALSE</default>
		<locale name="C">
			<short>Disable checking the GTK plugin module at startup</short>
			<long>Disable checking the GTK plugin module at startup. If you know the module is loaded but for some reasons the applet cannot correctly detect this fact, set this key to true to skip the checking.</long>
		</locale>
	</schema>
	<schema>
		<key>/schemas/apps/gnome-applet-globalmenu/prefs/has_handle</key>
		<owner>gnome-applet-globalmenu</owner>
		<type>bool</type>
		<default>FALSE</default>
		<locale name="C">
			<short>Add a handle to the applet</short>
			<long>Specify if the applet has a handle. When the handle is enabled, the applet will not expand to occupy the remaining empty area on the panel.</long>
		</locale>
	</schema>
	<schema>
		<key>/schemas/apps/gnome-applet-globalmenu/prefs/show_icon</key>
		<owner>gnome-applet-globalmenu</owner>
		<type>bool</type>
		<default>FALSE</default>
		<locale name="C">
			<short>Show the icon of the action window in the applet</short>
			<long>Show the icon of the active window in the applet when enabled.</long>
		</locale>
	</schema>
	<schema>
		<key>/schemas/apps/gnome-applet-globalmenu/prefs/show_name</key>
		<owner>gnome-applet-globalmenu</owner>
		<type>bool</type>
		<default>TRUE</default>
		<locale name="C">
			<short>Display active application's name</short>
			<long>Display the name of the active application in the applet when enabled</long>
		</locale>
	</schema>
	<schema>
		<key>/schemas/apps/gnome-applet-globalmenu/prefs/show_window_list</key>
		<owner>gnome-applet-globalmenu</owner>
		<type>bool</type>
		<default>TRUE</default>
		<locale name="C">
			<short>Enabled window list</short>
			<long>Add a window list to the application submenu.</long>
		</locale>
	</schema>
	<schema>
		<key>/schemas/apps/gnome-applet-globalmenu/prefs/show_window_actions</key>
		<owner>gnome-applet-globalmenu</owner>
		<type>bool</type>
		<default>TRUE</default>
		<locale name="C">
			<short>Enable window management actions</short>
			<long>Add window action menu (e.g., Close, Minimize) to the application submenu.</long>
		</locale>
	</schema>
	<schema>
		<key>/schemas/apps/gnome-applet-globalmenu/prefs/title_max_width</key>
		<owner>gnome-applet-globalmenu</owner>
		<type>int</type>
		<default>-1</default>
		<locale name="C">
			<short>Maximum pixel length of application name</short>
			<long>The maximum length of name of the application name, in pixels. -1 means unlimited</long>
		</locale>
	</schema>
	<schema>
		<key>/schemas/apps/gnome-applet-globalmenu/prefs/use_rgba_colormap</key>
		<owner>gnome-applet-globalmenu</owner>
		<type>bool</type>
		<default>FALSE</default>
		<locale name="C">
			<short>Enable the RGBA support(experimental)</short>
			<long>Enable the RGBA support for submenus. Restart the applet to take effects.</long>
		</locale>
	</schema>
	<schema>
		<key>/schemas/apps/gnome-applet-globalmenu/prefs/enable_search_box</key>
		<owner>gnome-applet-globalmenu</owner>
		<type>bool</type>
		<default>FALSE</default>
		<locale name="C">
			<short>Search box in switcher menu</short>
			<long>Add a search box in the dropdown menu, where you can find entries by typing the name.</long>
		</locale>
	</schema>
	<schema>
		<key>/schemas/apps/gnome-applet-globalmenu/prefs/grab_mnemonic_keys</key>
		<owner>gnome-applet-globalmenu</owner>
		<type>bool</type>
		<default>TRUE</default>
		<locale name="C">
			<short>Enable mnemonic keys</short>
			<long>Accessing the global menu items by the mnemonic keys. When this option is disabled, the topmost menu items are not directly accessible from keyboard.</long>
		</locale>
	</schema>
	<schema>
		<key>/schemas/apps/gnome-applet-globalmenu/prefs/per_monitor_mode</key>
		<owner>gnome-applet-globalmenu</owner>
		<type>bool</type>
		<default>TRUE</default>
		<locale name="C">
			<short>Enable per-monitor mode</short>
			<long>In per-monitor mode, Global Menu tracks the active application on each physical display device. If this mode is disabled, the entire logic screen is treated as a single desktop. If this mode is enabled, each physical device is treated as a desktop.</long>
		</locale>
	</schema>
	<schema>
		<key>/schemas/apps/gnome-applet-globalmenu/prefs/tiny_mode</key>
		<owner>gnome-applet-globalmenu</owner>
		<type>bool</type>
		<default>FALSE</default>
		<locale name="C">
			<short>Enable tiny mode</short>
			<long>In tiny mode, Global Menu is presented in a popup menu.</long>
		</locale>
	</schema>
</schemalist>
</gconfschemafile>
